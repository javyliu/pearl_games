<swiper indicator-dots="true" interval="5000" duration="1000" autoplay="true">
  <block wx:for="{{pictures}}">
    <swiper-item>
      <image src="{{item.url}}" class="slide-image" mode="aspectFill"/>
      <button class="btn" bindtap="start" wx:if="{{index == pictures.length - 1}}">立即体验</button>
    </swiper-item>
  </block>
</swiper>
