    <view class="meta">
      <text class="title">{{item.question}}</text>
      <text class="sub-title">{{item.answer}}</text>
      <text >{{item.game_role_name}}</text>
      <text >{{item.game_server_name}}</text>
      <text >{{item.game_server_name}}</text>
      <text >{{item.created_at}}</text>
      <text >{{item.updated_at}}</text>
    </view>
    </view>
  </navigator>
</scroll-view>

